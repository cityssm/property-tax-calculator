{
  "compilerOptions": {
    "target": "es2023",
    "module": "preserve",
    "moduleResolution": "bundler",
    "isolatedModules": false,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true
  },
  "include": ["./*"],
  "compileOnSave": true,
  "buildOnSave": true
}
